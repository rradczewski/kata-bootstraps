{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "docker:enableMajor"
  ],
  "ignorePresets": [
    "workarounds:javaLTSVersions"
  ],
  "dependencyDashboard": true,
  "automerge": true,
  "automergeType": "branch",
  "commitMessagePrefix": "[{{packageFileDir}}] {{semanticPrefix}}",
  "separateMajorMinor": false,
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "defaultRegistryUrls": [
        "https://index.docker.io"
      ]
    },
    {
      "matchPaths": [
        "elm/**",
        "elm/*"
      ],
      "groupName": "elm",
      "separateMajorMinor": false
    },
    {
      "matchPackageNames": [
        "docker.io/eclipse-temurin",
        "eclipse-temurin"
      ],
      "groupName": "java",
      "versioning": "regex:^(?<major>\\d+)(\\.(?<minor>\\d+))?(\\.(?<patch>\\d+))?(_(?<build>\\d+))?(-(?<compatibility>.*))?$"
    },
    {
      "matchPackageNames": [
        "docker.io/maven",
        "maven"
      ],
      "groupName": "java",
      "versioning": "regex:^(?<minor>\\d+)(\\.(?<patch>\\d+))?(\\.(?<build>\\d+))?-eclipse-temurin-(?<major>\\d+)-focal"
    },
    {
      "matchPackageNames": [
        "docker.io/maven",
        "maven",
        "docker.io/eclipse-temurin",
        "eclipse-temurin",
        "java-jdk"
      ],
      "groupName": "java"
    },
    {
      "matchFiles": [
        "(^|/|\\.)pom\\.xml$",
        "(^|/|\\.)build\\.gradle$"
      ],
      "matchPackageNames": "java-jdk",
      "rangeStrategy": "replace"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "(^|/|\\.)elm\\.json$"
      ],
      "matchStrings": [
        "\"elm-version\"\\s*:\\s*\"(?<currentValue>.*)\""
      ],
      "depNameTemplate": "elm/compiler",
      "datasourceTemplate": "github-tags",
      "versioningTemplate": "semver"
    },
    {
      "fileMatch": [
        "(^|/|\\.)elm\\.json$"
      ],
      "matchStrings": [
        "\"(?<depName>.*\/.*?)\"\\s*:\\s*\"(?<currentValue>.*)\""
      ],
      "datasourceTemplate": "github-tags",
      "versioningTemplate": "semver"
    },
    {
      "fileMatch": [
        "(^|/|\\.)Dockerfile$",
        "(^|/)Dockerfile[^/]*$"
      ],
      "matchStrings": [
        "renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s+ENV .*?_VERSION=(?<currentValue>.*)\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    },
    {
      "fileMatch": [
        "\\.?devcontainer.json$"
      ],
      "matchStrings": [
        "\"image\" *: *\"(?<depName>.+?):(?<currentValue>.+?)\",?"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "fileMatch": [
        "(^|/|\\.)pom\\.xml$"
      ],
      "matchStrings": [
        "<maven\\.compiler\\.release>(?<currentValue>.*?)<\\/maven\\.compiler\\.release>"
      ],
      "depNameTemplate": "java-jdk",
      "datasourceTemplate": "java-version",
      "versioningTemplate": "regex:^(?<major>\\d+).*"
    },
    {
      "fileMatch": [
        "(^|/|\\.)build\\.gradle$"
      ],
      "matchStrings": [
        "jvmToolchain\\((?<currentValue>.*?)\\)"
      ],
      "depNameTemplate": "java-jdk",
      "datasourceTemplate": "java-version",
      "versioningTemplate": "regex:^(?<major>\\d+).*"
    },
    {
      "fileMatch": [
        "(^|/)gleam\\.toml$"
      ],
      "matchStringsStrategy": "recursive",
      "matchStrings": [
        "\\[(dependencies|dev-dependencies)\\]\\s*[^\\[]*",
        "(?<depName>.+?) *= *\"(?<currentValue>.+?)\""
      ],
      "versioningTemplate": "hex",
      "datasourceTemplate": "hex"
    }
  ]
}