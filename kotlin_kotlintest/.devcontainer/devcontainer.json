{
  "name": "Kotlin",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "onCreateCommand": "./gradlew dependencies",
  "updateRemoteUserUID": true,
  "containerUser": "java",
  "remoteUser": "java",
  "customizations": {
    "github.com/rradczewski/kata-bootstraps": {
      "failingTestVerification": "./gradlew test 2>&1 | tee /dev/stderr | grep -q '2 tests completed, 1 failed'",
      "languageLogo": "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/kotlin/kotlin-original.svg"
    },
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack"
      ]
    }
  }
}